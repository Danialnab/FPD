<% layout('/boiler/userboiler') %>
<div class="container-fluid mt-7">
    <div class="row flex-row-reverse mb-3">
        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3 col-xxl-2">
            <form action="/archive" method="post">
                <input id="searchterm" name="searchTerm" type="text" class="form-control" placeholder="Search">
            </form>
        </div>
    </div>
    <div class="row">
        <% for(let i=requests.length -1 ; i>=0 ; i--){ %>
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3 col-xxl-2">
                <div class="card blur mb-3 shadow">
                    <div class="card-body">
                        <div style="text-align: center;">
                            <img src="<%= requests[i].image %>" style="max-height: 160px; max-width: 100%;" class="border-radius-lg shadow" alt="">
                        </div>
                            <div class="col d-flex flex-column justify-content-between">
                                <h6 style="font-size: 15px; overflow: hidden; text-overflow: ellipsis ; width: 100%; white-space: nowrap; "><%= requests[i].name %></h6>
                                <p style="font-size: 9px;">Created by
                                    <%= requests[i].owner.username %> at
                                    <%=  moment(requests[i].createdAt).format("l, LT");%> 
                                </p>
                                    <a class="btn bg-gradient-dark btn-sm mb-0" href="<%= requests[i].link %>" download>Download</a>
                                    <a class="btn bg-gradient-secondary btn-sm mb-0 mt-2" href="/show/<%= requests[i].id %>" target="_blank">Details</a>
                            </div>
                    </div>
                </div>
            </div>
            <% } %> 
    </div>
</div>
<script>
    if ( window.history.replaceState ) {
      window.history.replaceState( null, null, window.location.href );
    }
</script>